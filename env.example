# =====================================================
# BetSpy Polymarket Bot — .env.example
# Copy to .env for LOCAL development only.
# On Railway, set all vars via Dashboard → Variables..
# =====================================================

# REQUIRED
BOT_TOKEN=your-telegram-bot-token
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# OPTIONAL — Polymarket
POLYMARKET_REFERRAL_CODE=
POLYMARKET_DATA_API_URL=https://data-api.polymarket.com
POLYMARKET_GAMMA_API_URL=https://gamma-api.polymarket.com

# OPTIONAL — Polling
POLLING_INTERVAL_SECONDS=60
MAX_WALLETS_PER_USER=50
LOG_LEVEL=INFO

# OPTIONAL — Rate Limiting
API_RATE_LIMIT_REQUESTS=30
API_RATE_LIMIT_PERIOD_SECONDS=60
